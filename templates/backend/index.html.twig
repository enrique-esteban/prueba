{% extends 'base.html.twig' %}

{% block title %}
    Gestor de tareas
{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
        .error {
            display: none;
        }
    </style>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        // Añade tareas a la tabla de tareas
        function addToTable(jobs) {
            var jobListTB = $('#jobList tbody');
            
            if (typeof jobs !== "undefined") {
                $.each(jobs, function (i) {
                    if (jobs[i].categories === null) {
                        jobs[i].categories = "";
                    }

                    var row = "<tr class=\"" + jobs[i].name + "\">";
                    row += "<th>" + jobs[i].name + "</th>";
                    row += "<th>" + jobs[i].categories + "</th>";
                    row += '<th><button id="removeJob" name="'+ jobs[i].name +'" class="btn btn-danger btn-sm">X</button></th>'
                    row += "</tr>";

                    jobListTB.append(row);
                });
            }
        }

        function showErrorMessage(message) {
            console.log("Con error");
            errorDiv = $('.error');
            errorDiv.html(message);

            errorDiv.fadeIn("slow");

            setTimeout(function() {
                errorDiv.fadeOut("slow"); 
            }, 5000);
        }

        // Añade una tarea a la BD y la tabla de tareas
        function addJob () {
            var name = $('#name').val();
            console.log(name);
            if (name === "") {
                showErrorMessage("Campo de texto vacío. Por favor, agregue una tarea.");
            } else {
                var categories = [];
                var categoriesChbx = $(".category");

                categoriesChbx.each(function () {
                    var item = $(this);
                    item.is(':checked') ? categories.push(item.attr("name")) : "";
                });

                var job = {
                    name: name,
                    categories: categories
                };

                $.ajax({
                    url: "{{ url('ajax_save_job') }}",
                    type: "POST",
                    dataType: "json",
                    data: {
                        "job": job
                    },
                    async: true,
                    success: function (data) {
                        if (data.error === false) {
                            var job = JSON.parse(data.data);
                            
                            if (typeof job.categories !== "undefined") {
                                job.categories = job.categories.toString();
                            }
                            else {
                                job.categories = "";
                            }

                            addToTable([job]);
                        } else {
                           showErrorMessage(data.error); 
                        }
                    }
                });
            }

            return false;
        }

        // Borrar tarea
        $("#jobList").on("click", 'button', function(){
            // console.log('click');
            jobName = $(this).attr("name");

            $.ajax({
                url: "{{ url('ajax_remove_job') }}",
                type: "POST",
                dataType: "json",
                data: {
                    "jobName": jobName
                },
                async: true,
                success: function (data) {
                    //console.log(data);
                    classJob = "#jobList tbody tr." + jobName;
                    $(classJob).remove();
                }
            });
            return false;
        });

        // Cargar las tareas desde la BD
        function loadJobs() {
            $.ajax({
                url: "{{ url('ajax_load_jobs') }}",
                type: "POST",
                dataType: "json",
                // data: jobs,
                async: true,
                success: function (jobs) {
                    jobs = JSON.parse(jobs);
                    addToTable(jobs);
                }
            });
        }

        // Secuencia de la aplicación
        loadJobs(); // Obtiene los datos de la BD y rellena la tabla con las taréas obtenidas. 
        
        $('#addJob').click(addJob); // Guarda una tarea en la BD y la imprime en la tabla.

        console.log('ready');
    })
</script>
{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Gestor de tareas</h1>
    <hr>
    <div class="alert alert-danger error">Error</div>
    <form id="addjob" method="post" accept-charset="UTF-8" novalidate>
        <input type="hidden" name="action" value="users/send-password-reset-email">

        <input id="name" type="text" name="name" class="form-control" placeholder="Nueva tarea"/>
        <br>

        <input name="php" type="checkbox" class="category form-check-input">
        <label for="php" class="form-check-label">PHP</label>

        <input name="javascript" type="checkbox" class="category form-check-input">
        <label for="javascript" class="form-check-label">JavaScript</label>

        <input name="css" type="checkbox" class="category form-check-input">
        <label for="css" class="form-check-label">CSS</label>

        <input id="addJob" type="submit" value="Añadir" class="btn btn-primary"/>
    </form>
</div>
<br><br>

<div class="row mb-3">
    <div class="col-md-8 themed-grid-col">

        <table id="jobList" class="table">
            <thead>
                <tr>
                    <th scope="col">Tareas</th>
                    <th scope="col">Categorías</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
